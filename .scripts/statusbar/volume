#!/bin/sh

case $BLOCK_BUTTON in
	1) pulsemixer & ;;
	2) amixer -q -D pulse sset Master toggle && pkill -RTMIN+1 i3blocks ;;
	4) amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+1 i3blocks    ;;
	5) amixer -q -D pulse sset Master 5%- && pkill -RTMIN+1 i3blocks    ;;
	3) notify-send "ðŸ“¢ Volume module:" "
- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change."
esac

[ "$(awk '/muted/ {print $2}' <(pacmd list-sinks))" = "yes" ] && printf "ðŸ”‡\\n" && exit

vol=$(amixer get Master|awk '$0~/%/{print $5}'|tr -d '[]%'|head -n 1)

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

printf "%s %s%%\\n" "$icon" "$vol"
